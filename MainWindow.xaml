<Window x:Class="OlibKey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:OlibKey.ModelViews"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="OlibKey" Height="450" Width="800" MinWidth="600" MinHeight="350" Background="#FF5A0F26">
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="17"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Header="Создать хранилище" Command="{Binding NewPasswordStorage}"/>
                <MenuItem Header="Открыть хранилище" Command="{Binding OpenStorage}" InputGestureText="Ctrl + O"/>
                <MenuItem Header="Сохранить хранилище" Command="{Binding SaveStorage}" InputGestureText="Ctrl + S"/>
                <MenuItem Header="Заблокировать хранилище" Command="{Binding BlockingStorage}"/>
                <MenuItem Header="Разблокировать хранилище" Command="{Binding UnblockingStorage}"/>
                <Separator/>
                <MenuItem Header="Добавить логин" InputGestureText="Ctrl + N" Command="{Binding NewCreatePassword}"/>
                <Separator/>
                <MenuItem Header="Настройки"/>
                <MenuItem Header="Выйти из OlibKey" Command="{Binding ExitProgram}" InputGestureText="Alt + F4"/>
            </MenuItem>
            <MenuItem Header="Инструменты">
                <MenuItem Header="Генератор паролей" InputGestureText="Ctrl + G"/>
                <MenuItem Header="Изменить мастер-пароль"/>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="Проверить наличие обновлении"/>
                <MenuItem Header="О программе..."/>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" BorderBrush="{DynamicResource BorderColorWindow}" BorderThickness="0 0 1 0" Background="#931d60"/>
            <Frame x:Name="frame" Grid.Row="1" Grid.Column="2" Source="/Views/StartPage.xaml" NavigationUIVisibility="Hidden" Grid.RowSpan="2" />
            <ListBox x:Name="lBox" BorderThickness="0 1 1 1" ItemsSource="{Binding AccountsList, UpdateSourceTrigger=PropertyChanged}" Background="{DynamicResource BackgroundWindow}" BorderBrush="{DynamicResource BorderColorWindow}" Grid.Row="1" Grid.Column="1"/>
            <Border Grid.Column="1" Grid.Row="2" BorderThickness="0 0 1 0" BorderBrush="{DynamicResource BorderColorWindow}" Background="{DynamicResource GlobalBorderColor}">
                <Button Command="{Binding NewCreatePassword}" Content="Добавить" Margin="10"/>
            </Border>
            <Label Grid.Column="2" Content="{Binding NameStorage, UpdateSourceTrigger=PropertyChanged}" BorderBrush="{DynamicResource BorderColorWindow}" BorderThickness="0 0 0 1" Background="{DynamicResource GlobalBorderColor}" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
