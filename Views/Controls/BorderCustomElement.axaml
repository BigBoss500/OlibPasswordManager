<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OlibKey.Views.Controls.BorderCustomElement">
	<Border Classes="BorderStyle">
		<StackPanel Margin="5">
			<ScrollViewer>
				<ItemsRepeater Items="{Binding CustomElements}"/>
			</ScrollViewer>
			<TextBlock Text="Добавить элемент" Classes="Heading"/>
			<DockPanel Margin="5">
				<TextBlock Text="Тип:" VerticalAlignment="Center" Margin="0 0 5 0"/>
				<ComboBox x:Name="TypeCustomElement" SelectedIndex="{Binding Type}">
                                <ComboBoxItem Content="Текстовое"/>
                                <ComboBoxItem Content="Скрытое"/>
                                <ComboBoxItem Content="Логическое"/>
                </ComboBox>
			</DockPanel>
			<Button Content="{DynamicResource Add}"/>
		</StackPanel>
	</Border>
</UserControl>
