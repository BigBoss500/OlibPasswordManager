<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="450"
             HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
             x:Class="OlibKey.Views.Controls.CustomFolderListItem">
	<Border Padding="0,2">
		<Grid ColumnDefinitions="Auto,*">
			<Border Background="White" CornerRadius="999" Height="25" Width="25" Margin="5,0">
				<Image x:Name="imageIcon" Source="{StaticResource FolderIcon}" Margin="5"/>
			</Border>
			
			<TextBlock x:Name="textName" Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" Foreground="{DynamicResource ForegroundWindow}"/>
			<TextBox x:Name="tbName" Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center"/>
		</Grid>
	</Border>
</UserControl>
