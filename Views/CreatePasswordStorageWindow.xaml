<Window x:Class="OlibKey.Views.CreatePasswordStorageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        MinHeight="350"
        MinWidth="400"
        Title="Создать хранилище" Height="350" Width="400" Background="#FF5A0F26">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <Border Style="{DynamicResource ElementsBorderStyle}">
                    <StackPanel>
                        <Label Content="Директория" Foreground="Black"/>
                        <TextBox x:Name="TxtPathSelection" Margin="5" IsReadOnly="True"/>
                        <Button Content="Выбрать" Click="SelectDirectory" Margin="5" HorizontalAlignment="Left"/>
                        
                        <Separator Margin="15,5"/>
                        
                        <Label Content="Мастер-пароль" Foreground="Black"/>
                        <PasswordBox x:Name="TxtPassword" Margin="5"/>
                        <TextBox x:Name="TxtPasswordCollapsed" Margin="5" Visibility="Collapsed" IsReadOnly="True"/>
                        <CheckBox x:Name="CbHide" Margin="5" Content="Показать" Foreground="Black" VerticalAlignment="Center"/>
                        <DockPanel>
                            <Label Content="Сложность" Foreground="Black"/>
                            <ProgressBar x:Name="PbHard" Margin="5" Maximum="300"/>
                        </DockPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        <Border Grid.Row="1" BorderBrush="{DynamicResource BorderColorWindow}" Background="{DynamicResource BackgroundWindow}" BorderThickness="0 1 0 0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="Создать" Margin="15,0" Click="CreateStorageButton"/>
                <Button Content="Отмена" Click="CancelButton"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
