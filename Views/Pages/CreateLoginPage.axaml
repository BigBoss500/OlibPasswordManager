<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:c="clr-namespace:OlibKey.Core;assembly=OlibKey"
             x:Class="OlibKey.Views.Pages.CreateLoginPage">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="50"/>
		</Grid.RowDefinitions>

		<ScrollViewer VerticalScrollBarVisibility="Auto">
			<StackPanel Margin="10">
				<TextBlock Text="{DynamicResource AddElement}" FontSize="18" Foreground="{DynamicResource ThemeWindowForegroundBrush}" FontWeight="Bold" Margin="0 0 0 5"/>
				<Border Classes="BorderStyle" Padding="0 5" Margin="0 5 0 0">
					<StackPanel>
						<TextBlock Text="{DynamicResource Type}" Classes="Heading"/>
						<ComboBox x:Name="cbType" Margin="5" SelectedIndex="{Binding NewLogin.Type}">
							<ComboBoxItem Content="{StaticResource Login}"/>
							<ComboBoxItem Content="{DynamicResource BankCard}"/>
							<ComboBoxItem Content="{DynamicResource Passport}"/>
							<ComboBoxItem Content="{DynamicResource Reminder}"/>
						</ComboBox>
					</StackPanel>
				</Border>
				<Border Classes="BorderStyle" Margin="0 5" Padding="0 5">
					<StackPanel>
						<TextBlock Text="{DynamicResource Name}" Classes="Heading"/>
						<TextBox Margin="5" Text="{Binding NewLogin.Name}"/>

						<StackPanel x:Name="PasswordSection">
							<Separator Margin="15,5"/>
							<TextBlock Text="{DynamicResource Username}" Classes="Heading"/>
							<TextBox Margin="5" Text="{Binding NewLogin.Username}"/>

							<Separator/>

							<TextBlock Text="{DynamicResource Password+}" Classes="Heading"/>
							<TextBox x:Name="txtPassword" Margin="5" Text="{Binding NewLogin.Password}" PasswordChar="•"/>
							<StackPanel Orientation="Horizontal">
								<Button Content="{DynamicResource Generate}" Click="GeneratePassword" Margin="5" Padding="5 2"/>
								<CheckBox Content="{DynamicResource Show}" Checked="CheckedPassword" Unchecked="CheckedPassword" VerticalAlignment="Center"/>
							</StackPanel>
							<DockPanel Margin="5 0">
								<TextBlock Text="{DynamicResource Complexity}" VerticalAlignment="Center"/>
								<ProgressBar x:Name="pbHard" Margin="5 5 0 5"/>
							</DockPanel>
							<Separator/>

							<TextBlock Text="{DynamicResource WebSite}" Classes="Heading"/>
							<TextBox Margin="5" Text="{Binding NewLogin.WebSite}"/>
						</StackPanel>
						<StackPanel x:Name="ReminderSection">
							<Separator/>
							<TextBlock Text="{DynamicResource StartTime}" Classes="Heading"/>
							<TextBox x:Name="tbStartTime" Margin="5" Text="{Binding NewLogin.Username}"/>
							<StackPanel Orientation="Horizontal">
								<Button Content="{DynamicResource ZeroOut}" Margin="5" Click="TimeZeroing" Padding="5 2"/>
								<CheckBox x:Name="cbIsStartRemember" IsChecked="{Binding NewLogin.IsReminderActive}" Content="{DynamicResource ReminderStarted}" VerticalAlignment="Center"/>
							</StackPanel>
						</StackPanel>
						<StackPanel x:Name="BankCartSection">
							<Separator/>
							<TextBlock Text="{DynamicResource CartType}" Classes="Heading"/>
							<TextBox Margin="5" Text="{Binding NewLogin.TypeBankCard}"/>

							<Separator/>
							<TextBlock Text="{DynamicResource CardNumber}" Classes="Heading"/>
							<TextBox Margin="5" Text="{Binding NewLogin.Username}"/>

							<Separator/>
							<TextBlock Text="{DynamicResource YearOfService}" Classes="Heading"/>
							<TextBox Margin="5" Text="{Binding NewLogin.DateCard}"/>

							<Separator/>

							<TextBlock Text="{DynamicResource SecurityCodeCard}" Classes="Heading"/>
							<TextBox x:Name="txtSecurityCode" Margin="5" Text="{Binding NewLogin.SecurityCode}" PasswordChar="•"/>
							<CheckBox Content="{DynamicResource Show}" Checked="CheckedSecurityCode" Unchecked="CheckedSecurityCode" VerticalAlignment="Center" Margin="5"/>
						</StackPanel>

						<StackPanel x:Name="PersonalDataSection">
							<Separator/>

							<TextBlock Text="{DynamicResource FullName}" Classes="Heading"/>
							<TextBox Margin="5" Text="{Binding NewLogin.Username}"/>

							<Separator/>

							<TextBlock Text="{DynamicResource PassportSeriesAndNumber}" Classes="Heading"/>
							<TextBox Margin="5" Text="{Binding NewLogin.PersonalDataNumber}"/>

							<Separator/>

							<TextBlock Text="{DynamicResource PlaceOfIssue}" Classes="Heading"/>
							<TextBox Margin="5" Text="{Binding NewLogin.PersonalDataPlaceOfIssue}"/>


						</StackPanel>

						<Separator/>

						<TextBlock Text="{DynamicResource CustomFolder}" Classes="Heading"/>
						<ComboBox Margin="5" Items="{Binding Folders}" SelectedIndex="{Binding SelectionFolderIndex}">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Name}"/>
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</StackPanel>
				</Border>
				<Border Classes="BorderStyle" Margin="0 0 0 5" Padding="0 5">
					<StackPanel>
						<TextBlock Text="{DynamicResource Notes}" Classes="Heading"/>
						<TextBox Margin="5 5 5 0" AcceptsReturn="True" TextWrapping="Wrap" Height="100" Text="{Binding NewLogin.Note}"/>
					</StackPanel>
				</Border>
				<TextBlock Text="{DynamicResource CustomItems}" FontSize="18" Foreground="{DynamicResource ThemeWindowForegroundBrush}" FontWeight="Bold" Margin="0 5 0 5"/>
				<Border Classes="BorderStyle" Margin="0 5" Padding="0 5">
					<StackPanel>
						<ScrollViewer>
							<ItemsRepeater Items="{Binding CustomElements}"/>
						</ScrollViewer>
						<TextBlock Text="{DynamicResource AddElement}" Classes="Heading"/>
						<DockPanel Margin="5">
							<TextBlock Text="{DynamicResource TypeColon}" VerticalAlignment="Center" Margin="0 0 5 0"/>
							<ComboBox x:Name="TypeCustomElement" SelectedIndex="{Binding Type}">
								<ComboBoxItem Content="{StaticResource Text}"/>
								<ComboBoxItem Content="{DynamicResource Hidden}"/>
								<ComboBoxItem Content="{DynamicResource Logical}"/>
							</ComboBox>
						</DockPanel>
						<Button Content="{DynamicResource Add}" Command="{Binding AddCustomElementCommand}" Margin="5 0 5 0"/>
					</StackPanel>
				</Border>
			</StackPanel>
		</ScrollViewer>

		<Border BorderThickness="0 1 0 0" Grid.Row="1" Classes="ButtonsMenu">
			<StackPanel Orientation="Horizontal" Margin="10">
				<Button Content="{DynamicResource PasswordSave}" Command="{Binding CreateLoginCommand}"/>
				<Button Content="{DynamicResource Cancel}" Margin="15,0" Command="{Binding BackCommand}"/>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>
