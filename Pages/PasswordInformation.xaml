<Page x:Class="OlibPasswordManager.Pages.PasswordInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OlibPasswordManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="300"
      Title="PasswordInformation">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <StackPanel Margin="10">
                <Label Content="Информация об элементе" FontSize="16"/>
                <Border Margin="0,5" Background="White" CornerRadius="5">
                    <StackPanel>
                        <Label Content="Название"/>
                        <TextBox x:Name="txtName" Margin="5" IsReadOnly="True"/>
                    </StackPanel>
                </Border>
                <Border Margin="0,5" Background="White" CornerRadius="5">
                    <StackPanel>
                        <Label Content="Имя пользователя"/>
                        <TextBox x:Name="txtNameAccount" Margin="5" IsReadOnly="True"/>
                    </StackPanel>
                </Border>
                <Border Margin="0,5" Background="White" CornerRadius="5">
                    <StackPanel>
                        <Label Content="Пароль"/>
                        <PasswordBox x:Name="txtPassword" Margin="5" IsEnabled="False"/>
                        <TextBox x:Name="txtPasswordCollapsed" Margin="5" Visibility="Collapsed" IsReadOnly="True"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Копировать" Margin="5" Click="CopyPassword"/>
                            <CheckBox x:Name="cbHide" Content="Показать" VerticalAlignment="Center" Checked="CollapsedPassword" Unchecked="CollapsedPassword"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Обновлен:"/>
                    <Label x:Name="labelCreateData"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <Border Grid.Row="1" BorderBrush="#A5A5A5" BorderThickness="1">
            <StackPanel Orientation="Horizontal" Background="White">
                <Button Content="Изменить" Margin="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
