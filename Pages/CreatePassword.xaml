<Page x:Class="OlibPasswordManager.Pages.CreatePassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OlibPasswordManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="CreatePassword">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <StackPanel Margin="10">
                <Label Content="Добавить элемент" FontSize="16"/>
                <Border Margin="0,5" Background="White" CornerRadius="5">
                    <StackPanel>
                        <Label Content="Название"/>
                        <TextBox x:Name="txtName" Margin="5"/>
                    </StackPanel>
                </Border>
                <Border Margin="0,5" Background="White" CornerRadius="5">
                    <StackPanel>
                        <Label Content="Имя пользователя"/>
                        <TextBox x:Name="txtNameAccount" Margin="5"/>
                    </StackPanel>
                </Border>
                <Border Margin="0,5" Background="White" CornerRadius="5">
                    <StackPanel>
                        <Label Content="Пароль"/>
                        <PasswordBox x:Name="txtPassword" Margin="5"/>
                        <TextBox x:Name="txtPasswordCollapsed" Margin="5" Visibility="Collapsed" TextChanged="txtPasswordCollapsed_TextChanged"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Сгенерировать" Margin="5" Click="OpenPasswordGeneration"/>
                            <CheckBox x:Name="cbHide" Content="Показать" VerticalAlignment="Center" Checked="CollapsedPassword" Unchecked="CollapsedPassword"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Margin="0,5" Background="White" CornerRadius="5">
                    <StackPanel>
                        <Label Content="Веб-сайт"/>
                        <TextBox x:Name="txtWebSite" Margin="5"/>
                    </StackPanel>
                </Border>
                <Border Margin="0,5" Background="White" CornerRadius="5">
                    <StackPanel>
                        <Label Content="Заметки"/>
                        <TextBox x:Name="txtNote" Margin="5" Height="100"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        <Border Grid.Row="1" BorderBrush="#A5A5A5" BorderThickness="1">
            <StackPanel Orientation="Horizontal" Background="White">
                <Button Content="Сохранить" Margin="10"/>
                <Button Content="Отменить" Margin="10" Click="CloseCreatePassword"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
