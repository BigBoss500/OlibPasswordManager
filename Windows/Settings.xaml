<Window x:Class="OlibPasswordManager.Windows.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        FontFamily="{StaticResource Montserrat}"
        Title="{DynamicResource Settings}" Height="350" Width="450">
    <Grid>
        <StackPanel Margin="5">
            <DockPanel>
                <Label Content="{DynamicResource Language}"/>
                <ComboBox x:Name="CbLang" Margin="10,0" SelectionChanged="cbLang_SelectionChanged"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
