<Window x:Class="OlibPasswordManager.Windows.PasswordGenerator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OlibPasswordManager.Windows"
        mc:Ignorable="d"
        Title="Генератор паролей" Height="350" Width="480" MinHeight="350" MinWidth="480">
    <Window.Resources>
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="20"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="195"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Характеристики" Margin="5,5,5,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Label Height="26"/>
                    <TextBlock Text="Строчные (abc)"/>
                    <TextBlock Text="Заглавные (ABC)"/>
                    <TextBlock Text="Цифры (123)"/>
                    <TextBlock Text="Специальные ($%#)"/>
                    <TextBlock Text="Нижняя черта (_)"/>
                    <TextBlock Text="Пробел ( )"/>
                    <TextBox x:Name="txtOther" Margin="0,10,0,0" Height="20" HorizontalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Label Content="Допускать" HorizontalContentAlignment="Center"/>
                    <CheckBox x:Name="chkAllowLowercase" IsChecked="True"/>
                    <CheckBox x:Name="chkAllowUppercase" IsChecked="True"/>
                    <CheckBox x:Name="chkAllowNumber"/>
                    <CheckBox x:Name="chkAllowSpecial"/>
                    <CheckBox x:Name="chkAllowUnderscore"/>
                    <CheckBox x:Name="chkAllowSpace"/>
                    <CheckBox x:Name="chkAllowOther"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <Label Content="Требовать" HorizontalContentAlignment="Center"/>
                    <CheckBox x:Name="chkRequireLowercase"/>
                    <CheckBox x:Name="chkRequireUppercase"/>
                    <CheckBox x:Name="chkRequireNumber"/>
                    <CheckBox x:Name="chkRequireSpecial"/>
                    <CheckBox x:Name="chkRequireUnderscore"/>
                    <CheckBox x:Name="chkRequireSpace"/>
                    <CheckBox x:Name="chkRequireOther"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="Пароль:" VerticalContentAlignment="Center"/>
            <TextBox x:Name="txtPassword" Height="20" Width="200" IsReadOnly="True"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Label Content="Мин. длина:"/>
                <TextBox x:Name="txtMinLenght" Text="10" Width="60" Height="20" VerticalContentAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
                <Label Content="Мак. длина:"/>
                <TextBox x:Name="txtMaxLenght" Text="10" Width="60" Height="20" VerticalContentAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
            <Button Content="Сгенерировать" Margin="5,10" Click="ClickGeneratePassword"/>
            <Button x:Name="saveButton" Content="Сохранить" Margin="5,10" Visibility="Collapsed" Click="SavePassword"/>
        </StackPanel>
    </Grid>
</Window>
