<Window x:Class="OlibPasswordManager.Windows.RequireMasterPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OlibPasswordManager.Windows"
        mc:Ignorable="d"
        FontFamily="{StaticResource Montserrat}"
        MinHeight="300"
        MinWidth="320"
        Title="{DynamicResource EnterMP}" Height="300" Width="320" Background="#FFE2E2E2" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="{StaticResource Olib_bone_DrawingImage}" Margin="10"/>
        <Border Margin="5" Background="White" CornerRadius="5" Grid.Row="1" VerticalAlignment="Top">
            <StackPanel>
                <Label Content="{DynamicResource MasterPassword}"/>
                <PasswordBox x:Name="txtPassword" Margin="5" KeyDown="PressEnter" Focusable="True"/>
            </StackPanel>
        </Border>
        <Border Background="White" VerticalAlignment="Bottom" Grid.Row="1">
            <StackPanel Orientation="Horizontal" Background="White" HorizontalAlignment="Right">
                <Button Content="{DynamicResource Open}" Margin="10" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
