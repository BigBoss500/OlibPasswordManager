<Window x:Class="OlibPasswordManager.Windows.CreateData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OlibPasswordManager.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        FontFamily="{StaticResource Montserrat}"
        Title="Создать базу данных" Height="450" Width="500" Background="#ecf0f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <StackPanel Margin="10">
                <Border Margin="0,5" Background="White" CornerRadius="5">
                    <StackPanel>
                        <Label Content="Название"/>
                        <TextBox x:Name="txtName" Margin="5"/>
                    </StackPanel>
                </Border>
                <Border Margin="0,5" Background="White" CornerRadius="5">
                    <StackPanel>
                        <Label Content="Путь хранения"/>
                        <TextBox x:Name="txtPathSelection" Margin="5"/>
                        <Button Content="Выбрать" Margin="5" HorizontalAlignment="Left" Click="PathSelection"/>
                    </StackPanel>
                </Border>
                <Border Margin="0,5" Background="White" CornerRadius="5">
                    <StackPanel>
                        <Label Content="Мастер-пароль"/>
                        <PasswordBox x:Name="txtPassword" Margin="5"/>
                        <TextBox x:Name="txtPasswordCollapsed" Margin="5" Visibility="Collapsed" IsReadOnly="True"/>
                        <CheckBox x:Name="cbHide" Margin="5" Content="Показать" VerticalAlignment="Center" Checked="CollapsedPassword" Unchecked="CollapsedPassword"/>
                    </StackPanel>
                </Border>
                <AccessText Text="Обратите внимание! Если вы забудете мастер-пароль, вы не сможете восстановить хранилище!" Foreground="Red" TextWrapping="Wrap" TextAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
        <Border Grid.Row="1" Background="White">
            <Button Content="Сохранить" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="5" Margin="10" Click="Button_Click"/>
        </Border>
    </Grid>
</Window>
