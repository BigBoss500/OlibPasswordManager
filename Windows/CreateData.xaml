<Window x:Class="OlibPasswordManager.Windows.CreateData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OlibPasswordManager.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinHeight="350"
        MinWidth="450"
        FontFamily="{StaticResource Montserrat}"
        Title="Создать базу данных" Height="350" Width="450" Background="#ecf0f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <StackPanel Margin="10">
                <Border Style="{DynamicResource PageBorder}">
                    <StackPanel>
                        <Label Content="Путь хранения"/>
                        <TextBox x:Name="txtPathSelection" Margin="5" IsReadOnly="True"/>
                        <Button Content="Выбрать" Margin="5" HorizontalAlignment="Left" Click="PathSelection"/>
                    </StackPanel>
                </Border>
                <Border Style="{DynamicResource PageBorder}">
                    <StackPanel>
                        <Label Content="Мастер-пароль"/>
                        <PasswordBox x:Name="txtPassword" Margin="5" PasswordChanged="txtPassword_PasswordChanged"/>
                        <TextBox x:Name="txtPasswordCollapsed" Margin="5" Visibility="Collapsed" IsReadOnly="True"/>
                        <CheckBox x:Name="cbHide" Margin="5" Content="Показать" VerticalAlignment="Center" Checked="CollapsedPassword" Unchecked="CollapsedPassword"/>
                        <DockPanel>
                            <Label Content="Сложность:"/>
                            <ProgressBar x:Name="pbHard" Margin="5" Maximum="300" ValueChanged="pbHard_ValueChanged"/>
                        </DockPanel>
                    </StackPanel>
                </Border>
                <AccessText Text="Обратите внимание! Если вы забудете мастер-пароль, вы не сможете восстановить хранилище!" Foreground="Red" TextWrapping="Wrap" TextAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
        <Border Grid.Row="1" Background="#f9fafc" BorderBrush="#dddddd" BorderThickness="1">
            <Button Content="Сохранить" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="5" Margin="10" Click="Button_Click"/>
        </Border>
    </Grid>
</Window>
